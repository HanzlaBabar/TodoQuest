@model IEnumerable<TodoViewModel>

@{
    ViewData["Title"] = "ToDoQuest";
}

<h1>Todo List</h1>
<p><a class="btn btn-info" role="button" asp-action="Create">Create New</a></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model!)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="hidden" name="Title" value="@item.Title"/>
                        <input type="hidden" name="Description" value="@item.Description" />
                        <input type="checkbox" name="IsCompleted" value="@item.IsCompleted" onchange="this.form.submit()" />
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>